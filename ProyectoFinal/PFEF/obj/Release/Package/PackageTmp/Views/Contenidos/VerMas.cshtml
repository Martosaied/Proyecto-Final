@model PFEF.Models.Contenidos


<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/Site.css" type="text/css" />
</head>
<body>
    <div>
        <div>
            <h1>@Model.Nombre</h1>
            <p>@Model.Descripcion</p>
            <h6><small>subido el por @Model.Usuarios.Nombre</small></h6>
        </div>
        <div>
            <div class="carac row">
                <h6 class="col-xs-4">Materia: <b>@Model.Materias.Nombre</b></h6>
                <h6 class="col-xs-4">Tipo : <b>@Model.TiposContenidos.Nombre</b></h6>
                <h6 class="col-xs-4">Nivel educativo: <b>@Model.NivelesEducativos.Nombre</b></h6>
            </div>
            <div class="row">
                <h6 class="col-xs-4">
                    Profesor
                    : <b>@Model.Profesor</b>
                </h6>
                <h6 class="col-xs-4">Escuelas: <b>@Model.Escuelas.Nombre</b></h6>
                <h6 class="col-xs-4">Cursada: <b>Año @Model.Cursada</b></h6>
            </div>
        </div>
        <div>
            <iframe src=@ViewBag.URL style="border: none; width:100%; height:780px;"></iframe>
        </div>
        <div>
            @Html.ActionLink("Descargar!", "Descargar", "Contenidos", new { ID = Model.Id }, new { @class = "btn btn-embossed btn-primary" })
        </div>
    </div>
</body>
</html>