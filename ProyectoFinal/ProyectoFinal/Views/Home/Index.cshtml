@using ProyectoFinal.Models
@{
    ViewBag.Title = "Home de Inicio";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>HomedeInicio</title>
    <meta charset="utf-8" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href='http://fonts.googleapis.com/css?family=Nunito:400,300' rel='stylesheet' type='text/css'>
</head>
<body>
    <div>
        <div class="btn-group btn-group-justified" role="group" aria-label="...">
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-default">Mas recientes</button>
            </div>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-default">Mas descargados</button>
            </div>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-default">Mejor valorados</button>
            </div>
        </div>
        <div class="row" style="margin:1%;">
            @{
                foreach (Contenido item in ViewBag.Articulos)
                {
                    <div class="col-sm-6 col-md-4" style="margin-bottom:15px;">
                        <div class="thumbnail">
                            <div class="caption">
                                <h3>@item.Nombre</h3>
                                <p>@item.Descripcion</p>
                                <h4>@item.IdEscuelas</h4>
                                <h4>@item.IdMateria</h4>
                                <h4>@item.Profesor</h4>
                                <p><a href=@item.Ruta class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p>
                            </div>
                        </div>
                    </div>

                }
            }
        </div>
        
    </div>
</body>
</html>
