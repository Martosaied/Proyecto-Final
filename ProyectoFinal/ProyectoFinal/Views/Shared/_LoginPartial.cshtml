@using ProyectoFinal.Models
@model Usuario

@{Usuario usuario = ViewBag.Usuario; }

@if (Usuario.Logueado)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">


            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    @Usuario.usuarioConectado.Nombre <b class="caret"></b>
                </a>
                <ul class="dropdown-menu">
                    <li><a href="#">Favoritos</a></li>
                    <li><a href="#">Subidas</a></li>
                    <li><a href="#">Descargas</a></li>
                    <li class="divider"></li>
                    <li>@Html.ActionLink("Log Off", "LogOff", "Home", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                </ul>
            <li>@Html.ActionLink("Subir", "AbrirSubir", "Home", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Registrarse", "AbrirRegistracion", "Home", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "AbrirLogin", "Home", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
