@using ProyectoFinal.Models
@model ProyectoFinal.Models.Contenido
@{
    ViewBag.Title = "Subir";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href='http://fonts.googleapis.com/css?family=Nunito:400,300' rel='stylesheet' type='text/css'>
</head>
<body>
    <div class="container">
        @using (Html.BeginForm("SubirE1", "Contenido", FormMethod.Post, new { @class = "form-signin", role = "form", enctype = "multipart/form-data" }))
        {
            <h2 class="form-signin-heading">Subir archivo</h2>
            <div class="progress">
                <div class="progress-bar" style="width: 0%;"></div>
            </div>
            <div class="form-group">
                @Html.ValidationMessageFor(x => x.Nombre)<br />
                @Html.TextBoxFor(x => x.Nombre, new { type = "text", @class = "form-control", placeholder = "Nombre", @required = "required" })

                @Html.ValidationMessageFor(x => x.Descripcion)<br />
                @Html.TextAreaFor(x => x.Descripcion, new { @class = "form-control", placeholder = "Descripcion", @required = "required" })
            </div>

            <button class="btn btn-lg btn-primary btn-block" type="submit">Subir</button>
        }

    </div> <!-- /container -->
    <script src="../../assets/js/ie10-viewport-bug-workaround.js"></script>
</body>
</html>
